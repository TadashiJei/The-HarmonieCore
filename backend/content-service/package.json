{
  "name": "harmoniecore-content-service",
  "version": "1.0.0",
  "description": "Content Management microservice for HarmonieCore platform with IPFS, metadata, and CDN integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "docker:build": "docker build -t harmoniecore-content-service .",
    "docker:run": "docker run -p 3007:3007 --env-file .env harmoniecore-content-service",
    "ipfs:daemon": "ipfs daemon",
    "upload:test": "node scripts/test-upload.js"
  },
  "keywords": [
    "content",
    "metadata",
    "ipfs",
    "cdn",
    "microservice",
    "harmoniecore",
    "artists",
    "music",
    "nft"
  ],
  "author": "HarmonieCore Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "mongoose": "^7.3.0",
    "redis": "^4.6.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "fluent-ffmpeg": "^2.1.2",
    "ipfs-http-client": "^60.0.1",
    "web3.storage": "^4.5.4",
    "pinata-sdk": "^2.1.0",
    "axios": "^1.4.0",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "winston": "^3.9.0",
    "node-cron": "^3.0.2",
    "mime-types": "^2.1.35",
    "crypto": "^1.0.1",
    "dotenv": "^16.1.4",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22",
    "eslint": "^8.43.0",
    "@types/jest": "^29.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
