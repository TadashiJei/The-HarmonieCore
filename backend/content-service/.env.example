# Content Service Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3007
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/harmoniecore_content
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# IPFS Storage Providers
WEB3_STORAGE_TOKEN=your-web3-storage-token
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# CDN Configuration
CDN_BASE_URL=https://cdn.harmoniecore.com
CDN_API_KEY=your-cdn-api-key

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads
TEMP_DIR=./uploads/temp
PROCESSED_DIR=./uploads/processed

# Processing Configuration
MAX_CONCURRENT_UPLOADS=5
PROCESSING_TIMEOUT=300000  # 5 minutes in milliseconds

# Image Processing
IMAGE_QUALITY=85
THUMBNAIL_SIZE=150
SMALL_SIZE=400
MEDIUM_SIZE=800
LARGE_SIZE=1200

# Video Processing
VIDEO_RESOLUTIONS=240p,480p,720p,1080p
VIDEO_BITRATES=500k,1000k,2500k,5000k
FFMPEG_PATH=/usr/bin/ffmpeg

# Audio Processing
AUDIO_BITRATE=128k
AUDIO_FORMATS=mp3,aac,flac

# Security Configuration
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key-for-service-to-service
ALLOWED_ORIGINS=http://localhost:3000,https://harmoniecore.com,https://app.harmoniecore.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Content Moderation
ENABLE_AUTO_MODERATION=true
MODERATION_THRESHOLD=0.8
MODERATION_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=harmoniecore-content

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000  # Maximum cached items

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_INTERVAL=60000

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=harmoniecore-content

# Cloudflare Configuration (Optional)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_R2_BUCKET=harmoniecore-content

# Content Types
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp,svg
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi,mkv,webm,flv
SUPPORTED_AUDIO_FORMATS=mp3,wav,flac,aac,ogg,m4a
SUPPORTED_DOCUMENT_FORMATS=pdf,doc,docx,txt,json

# Metadata Configuration
MAX_METADATA_SIZE=1024  # 1KB
REQUIRED_METADATA_FIELDS=title,description
OPTIONAL_METADATA_FIELDS=tags,category,license,artist,album,genre
