# Server Configuration
PORT=3004
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/harmoniecore_analytics
MONGODB_TEST_URI=mongodb://localhost:27017/harmoniecore_analytics_test

# Redis Configuration (for caching and real-time data)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info

# Analytics Configuration
MAX_EVENTS_PER_USER=1000
BATCH_SIZE=50
FLUSH_INTERVAL=30000
RETENTION_DAYS=90
MOBILE_DATA_THRESHOLD=1024
SAMPLING_RATE=0.1
CACHE_TTL=300
COMPRESSION_ENABLED=true

# Performance Settings
MAX_CONCURRENT_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Export Settings
MAX_EXPORT_ROWS=100000
EXPORT_CACHE_TTL=3600

# Mobile Optimization
MOBILE_SAMPLING_RATE=0.05
MOBILE_MAX_PAYLOAD=512
MOBILE_BATCH_SIZE=25

# Web3 Configuration
WEB3_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
WEB3_CHAIN_ID=1

# External Services
IPFS_GATEWAY=https://ipfs.io/ipfs/
CDN_BASE_URL=https://cdn.harmoniecore.com

# Security
JWT_SECRET=your-jwt-secret-key
API_KEY_SALT=your-api-key-salt
