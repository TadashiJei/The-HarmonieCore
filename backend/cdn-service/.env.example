# CDN Service Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3005
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=harmoniecore-cdn
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# CDN Configuration
CDN_BASE_URL=https://cdn.harmoniecore.com
CDN_REGIONS=us-east-1,us-west-2,eu-west-1,ap-southeast-1,ap-northeast-1
EDGE_NODES_COUNT=50
CACHE_TTL_IMAGES=86400
CACHE_TTL_VIDEOS=604800
CACHE_TTL_AUDIO=604800
CACHE_TTL_METADATA=3600

# Mobile Optimization
MOBILE_MAX_IMAGE_SIZE=1024
MOBILE_MAX_VIDEO_BITRATE=1000
MOBILE_MAX_AUDIO_BITRATE=128
MOBILE_ADAPTIVE_QUALITY=true
MOBILE_DATA_SAVING=true

# Security
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key
SIGNED_URL_EXPIRATION=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Performance
MAX_FILE_SIZE=100MB
MAX_CONCURRENT_UPLOADS=10
COMPRESSION_LEVEL=6
BROTLI_COMPRESSION=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_INTERVAL=60000
ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token
