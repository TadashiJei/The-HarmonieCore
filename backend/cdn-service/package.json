{
  "name": "harmoniecore-cdn-service",
  "version": "1.0.0",
  "description": "Global CDN service for HarmonieCore Web3 platform with edge caching and mobile optimization",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:edge && npm run build:workers",
    "build:edge": "webpack --config webpack.edge.config.js",
    "build:workers": "webpack --config webpack.worker.config.js",
    "deploy": "npm run build && npm run deploy:edge",
    "deploy:edge": "node scripts/deploy-edge.js",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "cdn",
    "edge-caching",
    "web3",
    "artists",
    "mobile-optimized",
    "streaming",
    "global-delivery"
  ],
  "author": "HarmonieCore Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1440.0",
    "axios": "^1.11.0",
    "brotli": "^1.3.3",
    "cloudflare": "^2.9.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "etag": "^1.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "fastify": "^4.21.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.2.0",
    "joi": "^17.9.2",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7",
    "sharp": "^0.32.5",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
