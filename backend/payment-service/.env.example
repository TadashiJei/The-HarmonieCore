# Payment Service Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3006
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/harmoniecore_payments
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
POLYGON_RPC_URL=https://polygon-rpc.com

# Wallet Configuration
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key
SOLANA_PRIVATE_KEY=your-solana-private-key-array

# Token Addresses (Mainnet)
USDC_ERC20_ADDRESS=0xA0b86a33E6441f5b6C7B6eD4c8e4B8B8e8E8B8B8
USDT_ERC20_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7
USDC_SPL_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
USDT_SPL_ADDRESS=Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB

# Xendit Configuration
XENDIT_SECRET_KEY=xnd_development_your-secret-key-here
XENDIT_WEBHOOK_TOKEN=your-xendit-webhook-token
XENDIT_ACCOUNT_ID=your-xendit-account-id
XENDIT_URL=https://api.xendit.co

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Payment Processing
MIN_TIP_AMOUNT=0.1
MAX_TIP_AMOUNT=1000
PAYMENT_TIMEOUT=3600
PAYOUT_THRESHOLD=10

# Security
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key-for-webhooks

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://harmoniecore.com,https://app.harmoniecore.com

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_INTERVAL=60000
ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token
