{
  "name": "harmoniecore-payment-service",
  "version": "1.0.0",
  "description": "Tipping & Payment Processing microservice for HarmonieCore platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "docker:build": "docker build -t harmoniecore-payment-service .",
    "docker:run": "docker run -p 3006:3006 --env-file .env harmoniecore-payment-service"
  },
  "keywords": [
    "payment",
    "tipping",
    "blockchain",
    "web3",
    "microservice",
    "harmoniecore",
    "core-network"
  ],
  "author": "HarmonieCore Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "mongoose": "^7.3.0",
    "redis": "^4.6.7",
    "web3": "^4.0.3",
    "@solana/web3.js": "^1.78.0",
    "@solana/spl-token": "^0.3.8",
    "ethers": "^6.6.0",
    "stripe": "^12.9.0",
    "xendit-node": "^3.0.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "winston": "^3.9.0",
    "node-cron": "^3.0.2",
    "bignumber.js": "^9.1.1",
    "axios": "^1.4.0",
    "dotenv": "^16.1.4"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22",
    "eslint": "^8.43.0",
    "@types/jest": "^29.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
