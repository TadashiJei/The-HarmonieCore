{
  "name": "harmoniecore-user-service",
  "version": "1.0.0",
  "description": "User Management microservice for HarmonieCore platform with authentication, profiles, and social features",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "docker:build": "docker build -t harmoniecore-user-service .",
    "docker:run": "docker run -p 3001:3001 --env-file .env harmoniecore-user-service",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "user",
    "authentication",
    "profile",
    "social",
    "microservice",
    "harmoniecore",
    "artists",
    "followers",
    "jwt"
  ],
  "author": "HarmonieCore Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "mongoose": "^7.3.0",
    "redis": "^4.6.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "passport-twitter": "^1.0.4",
    "passport-discord": "^0.1.4",
    "joi": "^17.9.2",
    "nodemailer": "^6.9.3",
    "nodemailer-sendgrid": "^1.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "crypto": "^1.0.1",
    "winston": "^3.9.0",
    "node-cron": "^3.0.2",
    "axios": "^1.4.0",
    "socket.io": "^4.7.1",
    "cloudinary": "^1.37.3",
    "aws-sdk": "^2.1406.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22",
    "eslint": "^8.43.0",
    "@types/jest": "^29.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
