# User Service Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/harmoniecore_users
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
    
# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Cloudinary Configuration (for avatars)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@harmoniecore.com
SENDGRID_API_KEY=your-sendgrid-api-key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Security Configuration
BCRYPT_ROUNDS=12
LOGIN_ATTEMPTS_LIMIT=5
LOCK_TIME=2h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_AVATAR_SIZE=5242880  # 5MB in bytes
ALLOWED_AVATAR_FORMATS=jpg,jpeg,png,webp

# Social Features Configuration
MAX_FOLLOWERS_PER_USER=10000
MAX_FOLLOWING_PER_USER=5000
MAX_BLOCKED_USERS=1000

# Cache Configuration
USER_CACHE_TTL=3600  # 1 hour in seconds
SESSION_CACHE_TTL=86400  # 24 hours in seconds

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_INTERVAL=60000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://harmoniecore.com,https://app.harmoniecore.com

# API Keys
API_KEY=your-api-key-for-service-to-service

# Content Moderation
ENABLE_AUTO_MODERATION=true
MODERATION_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=harmoniecore-users

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Analytics Configuration
ENABLE_USER_ANALYTICS=true
ANALYTICS_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token
